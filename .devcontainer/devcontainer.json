{
  "name": "Java 21 DevContainer",
  "dockerFile": "Dockerfile",
  "remoteUser": "vscode",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },

  "containerEnv": {
    "JAVA_HOME": "/usr/lib/jvm/java-21-openjdk",
    "DOCKER_HOST": "tcp://dind:2375"
  },

  "extensions": [
    "vscjava.vscode-java-pack",
    "redhat.java",
    "vmware.vscode-boot-dev-pack",
    "ms-vsliveshare.vsliveshare",
    "ms-azuretools.vscode-docker",
    "devcontainers.remote-containers"
  ],

  "workspaceMount": "source=java_devcontainer,target=/workspace,type=volume",
  "workspaceFolder": "/workspace/JavaCodeTest",

  "remoteEnv": {
    "DOCKER_HOST": "tcp://dind:2375"
  },

  "mounts": [
    {
      "source": "/var/run/docker.sock",
      "target": "/var/run/docker.sock",
      "type": "bind",
      "readOnly": false
    }
  ],

  "runArgs": ["--privileged"],

  "postCreateCommand": [
    "code --install-extension vscjava.vscode-java-pack",
    "code --install-extension redhat.java",
    "code --install-extension vmware.vscode-boot-dev-pack",
    "code --install-extension ms-vsliveshare.vsliveshare",
    "code --install-extension ms-azuretools.vscode-docker",
    "code --install-extension devcontainers.remote-containers"
  ]
}
